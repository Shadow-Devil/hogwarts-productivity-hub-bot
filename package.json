{
  "name": "hogwarts-productivity-hub-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "ts-node src/index.ts",
    "register": "ts-node src/register-commands.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc",
    "validate": "npm run lint && npm run typecheck"
  },
  "keywords": [
    "discord",
    "bot",
    "productivity",
    "pomodoro",
    "timer"
  ],
  "author": "",
  "license": "ISC",
  "description": "Discord Productivity Bot with task management, Pomodoro timers, and gamified points system",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.80",
    "dayjs": "^1.11.18",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "9.36.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  }
}
