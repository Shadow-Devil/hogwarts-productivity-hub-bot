{
  "name": "botd",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "register": "ts-node src/register-commands.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "discord",
    "bot",
    "productivity",
    "pomodoro",
    "timer"
  ],
  "author": "",
  "license": "ISC",
  "description": "Discord Productivity Bot with task management, Pomodoro timers, and gamified points system",
  "dependencies": {
    "@inquirer/prompts": "^7.8.1",
    "@octokit/rest": "^22.0.0",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "marked": "^16.1.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
