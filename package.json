    "dotenv": "^16.5.0",
    "marked": "^15.0.12",
    "node-cron": "^4.1.0",
    "pg": "^8.16.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "eslint": "^8.57.1",
