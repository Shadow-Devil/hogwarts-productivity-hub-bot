{
  "name": "hogwarts-productivity-hub-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "register": "ts-node src/register-commands.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint --flag unstable_native_nodejs_ts_config src/",
    "lint:fix": "eslint --flag unstable_native_nodejs_ts_config src/ --fix",
    "typecheck": "tsc",
    "validate": "npm run lint && npm run typecheck"
  },
  "keywords": [
    "discord",
    "bot",
    "productivity",
    "pomodoro",
    "timer"
  ],
  "author": "",
  "license": "ISC",
  "description": "Discord Productivity Bot with task management, Pomodoro timers, and gamified points system",
  "dependencies": {
    "dayjs": "^1.11.13",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
